{% extends '@vending_machine/base.html.twig' %}

{% block title %} <title>Twój profil</title> {% endblock %}

{% block header %} <h1> Twój profil </h1>{% endblock %}

 {% block body %}
     <table>
         <tr>
             <th>Login</th>
             <th>Adres Email</th>
             <th>Nr badga</th>
             <th>Dostępne środki</th>
             <th>Całkowite wydane środki</th>
             <th>Nabyty upust</th>
             <th>Kolor badga</th>
             <th>Uprawnienia</th>
            {# <th>Wpłać środki</th> #}
         </tr>


             <tr>
                 <td> {{ user.getUsername }} </td>
                 <td> {{  user.getEmail }} </td>
                 <td> {{  user.getBadgeNr }} </td>
                 <td> {{  user.getCash }} </td>
                 <td> {{  user.getMoneySpent }} </td>
                 <td> {{  user.getDiscount * 100 }}% </td>
                 <td> {{  user.getBadgeColor }} </td>
                 <td> {% for role in user.roles %}{{ role }}<br>{% endfor %} </td>
             </tr>
     </table>

     <div style="margin-top: 50px; margin-left: 20px;"> <img src="{{ asset('bundles/vending_machine/img/cleopatra.jpg') }}" /></div>

 {% endblock %}