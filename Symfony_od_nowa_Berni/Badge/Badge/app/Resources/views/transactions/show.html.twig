{% extends 'base.html.twig' %}

{% block body %}
    <h1>Transaction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ transaction.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ transaction.price }}</td>
            </tr>
            <tr>
                <th>Moneyleft</th>
                <td>{{ transaction.moneyLeft }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if transaction.created %}{{ transaction.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if transaction.updated %}{{ transaction.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('transactions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('transactions_edit', { 'id': transaction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
